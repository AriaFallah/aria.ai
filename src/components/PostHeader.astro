---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  cover?: ImageMetadata;
}

const { title, description, date, slug, cover = null } = Astro.props;
---

<header>
  <h2>
    <a href={`/blog/${slug}/`}>{title}</a>
  </h2>
  <h4>{description}</h4>
  <p>{date.toDateString()}</p>
  {cover != null && <Image alt="" src={cover} />}
</header>

<style>
  header {
    margin-block-end: 16px;
  }

  h2 a {
    border-bottom: none;
    text-decoration: none;
  }

  h2,
  h4 {
    margin: 0;
  }
</style>
